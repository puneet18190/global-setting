<div class='well'>
  <div class="pull-right">
      <%= link_to "New Setting",  new_setting_path, class: "btn btn-small btn-info" %>
      <%= link_to "Usage of Global Settings",  usage_settings_path, class: "btn btn-small btn-info" %>
  </div>
</div>


<div class="well span6 offset5">
  <center><h2>Global Settings</h2></center>
</div>

<div class="well span6 offset5">
  <table class="table table-striped table-bordered">
      <thead>
          <tr>
              <th class="text-center">Name</th>
              <th class="text-center">Type</th>
              <th class="text-center">Value</th>
              <th class="text-center">Environment</th>
              <th class="text-center">Action</th>
          </tr>
      </thead>
      <tbody>
        <% @settings.each do |setting|%>
          <tr class="text-center">
              <td><%= setting.name %></td>
              <td><%= setting.setting_type %></td>
              <td><%= setting.value %></td>
              <td><%= setting.env %></td>
              <td><%= link_to "Delete", setting, method: "DELETE", class: "btn btn-small btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>

